<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BaseAndroidApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/window_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoaderDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="bottomSheetStyle">@style/Widget.BottomSheet.Modal.Transparent</item>
    </style>

    <style name="Widget.BottomSheet.Modal.Transparent" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="TextStyleBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/black</item>
    </style>
    <style name="TextStyleNormal">
        <item name="android:textColor">@color/black_70</item>
        <item name="drawableTint">@color/black_70</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="BottomSheetBarStyle">
        <item name="android:background">@drawable/bg_bar_white</item>
    </style>

    <style name="BottomSheetTextBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CitySearchCardStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ErrorUIBGStyle">
        <item name="android:background">@color/white</item>
    </style>
</resources>